{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Stairs Detection",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/stairs_detection/stairs",
            "args": ["dir", "Positive_PCD"],
            //"args": ["pcd", "Positive_PCD/0_Cloud_XYZRGB.pcd"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // You might need to define this task in tasks.json
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
